{
  "$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConsistentArrayType": "off",
        "useImportType": "off",
        "useNodejsImportProtocol": "off",
        "noUnusedTemplateLiteral": "off",
        "useSingleVarDeclarator": "off",
        "useTemplate": "off",
        "noUselessElse": "off",
        "noInferrableTypes": "off",
        "useSelfClosingElements": "off",
        "noNonNullAssertion": "off",
        "useExponentiationOperator": "off"
      },
      "complexity": {
        "noBannedTypes": "off",
        "noStaticOnlyClass": "off",
        "noThisInStatic": "off",
        "useOptionalChain": "off",
        "noForEach": "off",
        "useLiteralKeys": "off",
        "noUselessSwitchCase": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noImplicitAnyLet": "off",
        "noArrayIndexKey": "off"
      },
      "a11y": {
        "useButtonType": "off",
        "noNoninteractiveTabindex": "off",
        "noSvgWithoutTitle": "off",
        "useKeyWithClickEvents": "off"
      }
    }
  },
  "files": {
    "ignore": [
      ".git/",
      ".gitignore",
      ".editorconfig",
      "node_modules/",
      "dist/",
      "build/",
      "*.lock",
      "*.md",
      "*.json",
      "*.yml",
      "*.yaml"
    ]
  }
}
